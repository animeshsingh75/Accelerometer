<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/currentXAxis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="X-Axis"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/currentYAxis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentXAxis"
        android:gravity="center"
        android:padding="10dp"
        android:text="Y-Axis"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/currentZAxis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentYAxis"
        android:gravity="center"
        android:padding="10dp"
        android:text="Z-Axis"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvXAxis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="X-Axis"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvYAxis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvXAxis"
        android:gravity="center"
        android:padding="10dp"
        android:text="Y-Axis"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvZAxis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvYAxis"
        android:gravity="center"
        android:padding="10dp"
        android:text="Z-Axis"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/airPressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="Z-Axis"
        android:textSize="18sp" />
</RelativeLayout>